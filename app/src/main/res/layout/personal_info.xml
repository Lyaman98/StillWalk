<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="hideKeyboard"></FrameLayout>


    <include android:id="@+id/tool_bar"
        layout="@layout/tool_bar"/>

    <LinearLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_400sdp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_below="@id/tool_bar"
        android:layout_centerHorizontal="true">


        <com.rengwuxian.materialedittext.MaterialEditText

            android:id="@+id/firstName"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:drawableStart="@drawable/identification2"
            android:gravity="center"
            android:hint="First name"
            app:met_floatingLabel="normal"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:textAllCaps="false" />

        <com.rengwuxian.materialedittext.MaterialEditText

            android:id="@+id/lastName"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableStart="@drawable/identification3"
            android:gravity="center"
            android:hint="Last name"
            app:met_floatingLabel="normal"
            android:inputType="textMultiLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_90sdp">

            <com.rengwuxian.materialedittext.MaterialEditText

                android:id="@+id/personal-info"
                android:layout_width="@dimen/_220sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:drawableStart="@drawable/info"
                android:gravity="center"
                app:met_floatingLabel="normal"
                android:layout_marginStart="@dimen/_10sdp"
                android:hint="Personal information"
                android:inputType="textMultiLine" />
        </LinearLayout>


        <TextView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="wrap_content"
            android:text="Age : "
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginStart="@dimen/_10sdp"

            />

        <Spinner
            android:id="@+id/age"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_10sdp" />


        <TextView
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:text="Blood Type : "
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp" />

        <Spinner
            android:id="@+id/bloodType"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_gravity="center" />


        <Button
            android:id="@+id/save"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:onClick="saveUserData"
            android:layout_gravity="center"
            android:text="save"
            android:textColor="#fff"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>