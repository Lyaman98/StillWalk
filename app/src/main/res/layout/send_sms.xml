<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/loadingPanel"
        style="@android:style/Animation"
        android:layout_width="37dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/loading_textView"
        android:layout_toStartOf="@+id/loading_textView"
        android:indeterminate="true">


    </ProgressBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_with_shadow">

        <TextView
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="SOS"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/background_with_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:text="STILL WALK"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/loading_textView"
        android:layout_width="250dp"
        android:layout_height="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="85dp"
        android:layout_marginEnd="41dp"
        android:text="Loading Location"
        android:textColor="@color/black"
        android:textSize="17dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="134dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/other_reason"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:onClick="sosButtonPressed"
            android:text="Other Reason"
            android:tag=""
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="invisible" />


        <Button
            android:id="@+id/tension_send"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:onClick="sosButtonPressed"
            android:text="Tension"
            android:tag="Tension"
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/heart_attack_send"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:onClick="sosButtonPressed"
            android:text="Heart attack"
            android:tag="Heart Attack"
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="invisible" />

        <Button
            android:id="@+id/dizziness_send"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/button_background"
            android:onClick="sosButtonPressed"
            android:text="Dizziness"
            android:tag="Dizziness"
            android:textColor="#fff"
            android:textStyle="bold"
            android:visibility="invisible" />

    </LinearLayout>


</RelativeLayout>