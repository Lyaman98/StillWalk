<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ProgressBar
        android:id="@+id/loadingPanel"
        style="@android:style/Animation"
        android:layout_width="37dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/loading_textView"
        android:layout_toStartOf="@+id/loading_textView"
        android:indeterminate="true">


    </ProgressBar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/background_with_shadow">

        <TextView
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="SOS"
            android:textColor="#fff"
            android:textSize="20dp" />
    </LinearLayout>


    <TextView
        android:id="@+id/my_location"
        android:layout_width="78dp"
        android:layout_height="312dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="100dp"
        android:layout_toStartOf="@+id/loadingPanel" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/background_with_shadow">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="120dp"
            android:layout_weight="1"
            android:text="STILL WALK"
            android:textColor="#fff"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/loading_textView"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="107dp"
        android:layout_marginTop="85dp"
        android:text="Loading Location"
        android:textColor="@color/black"
        android:textSize="17dp" />

    <Button
        android:id="@+id/other_reason"
        android:layout_width="149dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="131dp"
        android:background="@drawable/button_background"

        android:onClick="otherReasonSos"
        android:text="Other Reason"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />


    <Button
        android:id="@+id/tension_send"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="194dp"
        android:background="@drawable/button_background"
        android:onClick="tensionSos"
        android:text="Tension"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/heart_attack_send"
        android:layout_width="154dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/button_background"
        android:onClick="heartAttackSos"
        android:text="Heart Attack"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/dizziness_send"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="187dp"
        android:background="@drawable/button_background"
        android:onClick="dizzinessSos"
        android:text="Dizziness"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />

    <Button
        android:id="@+id/broken_bones_send"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="116dp"
        android:background="@drawable/button_background"
        android:onClick="brokenBonesSos"
        android:text="Broken Bones"
        android:textColor="#fff"
        android:textStyle="bold"
        android:visibility="invisible" />


</RelativeLayout>